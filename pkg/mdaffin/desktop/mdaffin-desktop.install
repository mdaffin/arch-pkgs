post_install() {
    post_upgrade
}

post_upgrade() {
    ln -sf /run/systemd/resolve/resolv.conf /etc/resolv.conf
    cp /usr/share/mdaffin/i3/config /etc/i3/config
    cp /usr/share/mdaffin/libinput-gestures.conf /etc/i3/libinput-gestures.conf
    echo "include /etc/sway/config.d/*" > /etc/sway/config
}
